<div class="block lg:flex lg:space-x-2 px-2 lg:p-0 mt-10 mb-10">
    <div class="w-full lg:w-2/3">
        <main class="mt-10">

            <div class="mb-4 md:mb-0 w-full max-w-screen-md mx-auto relative" style="height: 24em;">
                <div class="absolute left-0 bottom-0 w-full h-full z-10"
                    style="background-image: linear-gradient(180deg,transparent,rgba(0,0,0,.7));"></div>
                <img src="{{post.image.photo}}"
                    class="absolute  rounded-md rounded-none-b left-0 top-0 w-full h-full z-0 object-cover" />
                <div class="p-4 absolute bottom-0 left-0 z-20">
                    <a href="#"
                        class="px-4 py-1 bg-gray-800 text-pink-200 inline-flex items-center justify-center mb-2">{{post.category.name}}</a>
                    <h2 class="text-4xl font-semibold text-gray-100 leading-tight">
                        {{post.title}}
                    </h2>
                    <div class="flex mt-3">
                        {{!-- <img src="https://randomuser.me/api/portraits/men/97.jpg"
                    class="h-10 w-10 rounded-full mr-2 object-cover" /> --}}
                        <div>
                            {{!-- <p class="font-semibold text-gray-200 text-sm"> Mike Sullivan </p> --}}
                            <p class="font-semibold text-gray-400 text-xs">
                                {{formatDate createdAt 'DD MMM YYYY'}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="px-4 lg:px-0 mt-12 font-serif text-gray-700 max-w-screen-md mx-auto text-lg leading-relaxed">
                <h1 class="text-gray-800 text-4xl font-bold mt-2 mb-2 leading-tight">
                    {{post.title}}
                </h1>
                {{stripTags  post.content}}
            </div>
        </main>
    </div>

    <div class="w-full lg:w-1/3 px-3 mb-2">
        <div class="mb-4">
            <h5 class="font-bold text-lg uppercase text-gray-700 px-1 mb-2"> Categories </h5>
            <ul>
                {{#each categories}}
                <li class="px-1 py-4 border-b border-t border-white hover:border-gray-200 transition duration-300">
                    <a href="/category?name={{_id}}" class="flex items-center text-gray-700 cursor-pointer">
                        <span class="inline-block h-4 w-4 bg-purple-700 mr-3"></span>
                        {{name}}
                        {{!-- <span class="text-gray-700 ml-auto">23 articles</span> --}}
                        <i class='text-gray-500 bx bx-right-arrow-alt ml-1'></i>
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
        {{#each posts}}

        <div class=" mx-5 w-ful lg:flex">
            <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover bg-center rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden"
                style="background-image: url('{{image.photo}}')" title="Woman holding a mug">
            </div>
            <div
                class="border-r border-b border-l border-grey-light lg:border-l-0 lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                <div class="mb-8">
                    <p class="text-sm text-purple-700 text-grey-dark flex items-center">
                        {{category.name}}
                    </p>
                    <div class="text-black font-bold text-xl mb-2"><a href="/blog/{{link}}">{{title}}</a></div>
                    <p class="text-grey-darker lg:hidden text-base">
                        {{stripTags (truncate content 100)}}
                    </p>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>