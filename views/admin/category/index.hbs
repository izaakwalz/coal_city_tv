<div class="mx-10 my-2">
    <nav class="flex flex-row justify-between border-b
				dark:border-gray-600 dark:text-gray-400 transition duration-500
				ease-in-out">
        <div class="flex">
            <!-- Top NavBar -->

            <a href="/admin/category" class="py-2 block text-pink-400 border-pink-400
						dark:text-green-200 dark:border-green-200
						focus:outline-none border-b-2 font-medium capitalize
						transition duration-500 ease-in-out">
                Category
            </a>
        </div>

        <div class="flex items-center select-none">
            <span class="hover:text-pink-500 font-bold dark-hover:text-pink-300
						cursor-pointer mr-3 transition duration-500 ease-in-out">
                <h3>{{username}}</h3>
            </span>
        </div>

    </nav>
    <h2 class="my-4 text-4xl font-semibold dark:text-gray-400">
        Category
    </h2>

    <div class="flex flex-wrap -mx-4">
        <div class="w-full mb-6 lg:mb-0 lg:w-1/2 px-4">

            {{> errors/message }}

            <div class="bg-gray-200  pt-2 font-medium rounded my-16">
                <div class="container mx-auto">
                    <div class="inputs w-full max-w-2xl p-6 mx-auto">
                        <form action="/admin/category" method="POST" class="mt-6  " autocomplete="off">
                            <div class='flex flex-wrap -mx-3 mb-6'>
                                <div class='w-full md:w-full px-3 mb-6'>
                                    <label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
                                        for='title'>Category name</label>
                                    <input
                                        class='appearance-none block w-full bg-white text-gray-700 border border-gray-400 shadow-inner rounded-md py-3 px-4 leading-tight focus:outline-none  focus:border-gray-500'
                                        id='name' name="name" type='text' placeholder='(e.g) movies, music, games'>
                                </div>
                                <div class="flex justify-center">
                                    <button
                                        class="appearance-none bg-pink-300 text-gray-900 px-12 py-2 shadow-sm border border-gray-400 rounded-md mr-3"
                                        type="submit">save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="w-full lg:w-1/2 px-4">
            <div class="container mx-auto px-4 sm:px-8">
                <div class="py-8">

                    <div>
                        <h6 class=" text-base font-mono leading-tight">category: {{count}}</h6>
                    </div>
                    <div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
                        <div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
                            <table class="min-w-full leading-normal">
                                <thead>
                                    <tr>
                                        <th
                                            class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                            Title
                                        </th>
                                        <th
                                            class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                            Category
                                        </th>
                                        <th
                                            class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each categories}}
                                    <tr>
                                        <td class="px-2  py-2 border-b  border-r border-gray-300 bg-white text-sm">
                                            <p class="text-gray-900 whitespace-no-wrap">
                                                {{name}}
                                            </p>
                                        </td>
                                        <td class="px-2  py-2 border-b  border-r border-gray-300 bg-white text-sm">
                                            <p class="text-gray-900 whitespace-no-wrap">
                                                {{formatDate createdAt 'MM / DD / YYYY'}}
                                            </p>
                                        </td>
                                        <td
                                            class="px-2  py-2 border-b text-center border-r border-gray-300 bg-white text-sm">
                                            <div class="inline-flex mt-2 xs:mt-0">
                                                <a href="/admin/category/{{_id}}"
                                                    class="text-sm bg-green-600 hover:bg-green-800 text-white font-semibold mr-2 py-2 px-4 rounded">
                                                    <i class="fas fa-edit fa-small"></i>
                                                </a>
                                                <form action="/admin/category/{{_id}}" method="POST">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit"
                                                        class="text-sm bg-red-600 hover:bg-gray-400 text-white font-semibold py-2 px-4 rounded">
                                                        <i class="fas fa-trash-alt fa-small"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>

                                    </tr>
                                    {{else}}
                                    <p>No Category to display, create a category.</p>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>