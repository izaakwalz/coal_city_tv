<div class="mx-10 my-2">
    <nav class="flex flex-row justify-between border-b
				dark:border-gray-600 dark:text-gray-400 transition duration-500
				ease-in-out">
        <div class="flex">
            <!-- Top NavBar -->
            <a href="/admin/posts" class="py-2 block text-pink-400 border-pink-400
						dark:text-green-200 dark:border-green-200
						focus:outline-none border-b-2 font-medium capitalize
						transition duration-500 ease-in-out">
                Posts
            </a>

        </div>

        <div class="flex items-center select-none">
            <span class="hover:text-pink-500 font-bold dark-hover:text-pink-300
						cursor-pointer mr-3 transition duration-500 ease-in-out">
                <h3>{{username}}</h3>
            </span>
        </div>

    </nav>
    <h2 class="my-4 text-4xl font-serif dark:text-gray-400">
        {{title}}
    </h2>



    <!-- component -->
    <div class="bg-gray-200 min-h-screen pt-2 font-medium rounded my-16">
        <div class="container mx-auto">
            <div class="inputs w-full max-w-2xl p-6 mx-auto">
                {{> errors/message }}

                <form action="/admin/posts/edit/{{post._id}}" method="POST" class="mt-6" autocomplete="off">
                    <input type="hidden" name="_method" value="PUT">
                    <div class='flex flex-wrap -mx-3 mb-6'>
                        <div class='w-full md:w-full px-3 mb-6'>
                            <label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
                                for='title'>Post Title</label>
                            <input
                                class='appearance-none block w-full bg-white text-gray-700 border border-gray-400 shadow-inner rounded-md py-3 px-4 leading-tight focus:outline-none  focus:border-gray-500'
                                id='title' name="title" type='text' value="{{post.title}}" placeholder='Enter title'>
                        </div>


                        <div class='w-full md:w-full px-3 mb-6'>
                            <label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>chose
                                image</label>
                            <div class="flex-shrink w-full inline-block relative">
                                <select
                                    class="block appearance-none text-gray-600 w-full bg-white border border-gray-400 shadow-inner px-4 py-2 pr-8 rounded"
                                    name="image" id="image">
                                    {{#each images}}
                                    <option value="{{_id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                                <div
                                    class="pointer-events-none absolute top-0 mt-3  right-0 flex items-center px-2 text-gray-600">
                                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20">
                                        <path
                                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <div class='w-full md:w-full px-3 mb-6'>
                            <label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>Status
                            </label>
                            <div class="flex-shrink w-full inline-block relative">
                                <select
                                    class="block appearance-none text-gray-600 w-full bg-white border border-gray-400 shadow-inner px-4 py-2 pr-8 rounded"
                                    id="status" name="status">
                                    {{#select post.status}}
                                    <option value="public" selected>public</option>
                                    <option value="private">Private</option>
                                    {{/select}}
                                </select>
                                <div
                                    class="pointer-events-none absolute top-0 mt-3  right-0 flex items-center px-2 text-gray-600">
                                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20">
                                        <path
                                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class='w-full md:w-full px-3 mb-6'>
                            <label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>Trending
                            </label>
                            <div class="flex-shrink w-full inline-block relative">
                                <select
                                    class="block appearance-none text-gray-600 w-full bg-white border border-gray-400 shadow-inner px-4 py-2 pr-8 rounded"
                                    id="trending" name="trending">
                                    {{#select post.trending}}
                                    <option value="recent" selected>Recent</option>
                                    <option value="popular">Popular</option>
                                    {{/select}}
                                </select>
                                <div
                                    class="pointer-events-none absolute top-0 mt-3  right-0 flex items-center px-2 text-gray-600">
                                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20">
                                        <path
                                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class='w-full md:w-full px-3 mb-6'>
                            <label
                                class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>Category</label>
                            <div class="flex-shrink w-full inline-block relative">
                                <select
                                    class="block appearance-none text-gray-600 w-full bg-white border border-gray-400 shadow-inner px-4 py-2 pr-8 rounded"
                                    name="category" id="category">
                                    {{#each categories}}
                                    <option value="{{_id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                                <div
                                    class="pointer-events-none absolute top-0 mt-3  right-0 flex items-center px-2 text-gray-600">
                                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20">
                                        <path
                                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <div class='w-full md:w-full px-3 mb-6'>
                            <label
                                class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>Content</label>
                            <textarea id="content" name="content">{{post.content}}</textarea>
                        </div>

                        <div class='w-full md:w-full px-3 mb-6'>
                            <label
                                class='inline-flex items-start  tracking-wide text-green-700 text-xs font-medium mb-2'>
                                <input type="checkbox" id="allowComments" name="allowComments"
                                    class="form-checkbox h-5 w-5 text-green-600" checked>
                                <span class="ml-2 text-gray-700">allow comments?</span>
                            </label>
                        </div>
                        <div class="personal w-full border-t border-gray-400 pt-4">
                            <h2 class="text-2xl text-gray-900">SEO - meta & keywords (helps in ranking of the post)</h2>
                            <div class='w-full md:w-full px-3 mb-6'>
                                <label
                                    class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>keywords
                                </label>
                                <input
                                    class='appearance-none block w-full bg-white text-gray-700 border border-gray-400 shadow-inner rounded-md py-3 px-4 leading-tight focus:outline-none  focus:border-gray-500'
                                    type='text' id="keywords" name="keywords"
                                    placeholder="(e.g) phones, samsung, iphone, apple, oppo" value="{{post.keywords}}">
                            </div>
                            <div class='w-full md:w-full px-3 mb-6'>
                                <label
                                    class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'>Meta</label>
                                <textarea
                                    class='bg-gray-100 rounded-md  leading-normal resize-none w-full h-20 py-2 px-3 shadow-inner border border-gray-400 font-medium placeholder-gray-700 focus:outline-none focus:bg-white'
                                    id="meta" name="meta"
                                    placeholder="a short description about this post,  30 to 60 words">{{post.meta}}</textarea>
                            </div>
                        </div>
                        <div class="flex justify-end">
                            <button
                                class="appearance-none bg-orange-300 text-gray-900 px-12 py-2 shadow-sm border border-gray-400 rounded-md mr-3"
                                type="submit">update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>