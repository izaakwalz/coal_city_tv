<div class="mx-10 my-2">
    <nav class="flex flex-row justify-between border-b
				dark:border-gray-600 dark:text-gray-400 transition duration-500
				ease-in-out">
        <div class="flex">
            <!-- Top NavBar -->

            <a href="/admin/posts" class="py-2 block text-pink-400 border-pink-400
						dark:text-green-200 dark:border-green-200
						focus:outline-none border-b-2 font-medium capitalize
						transition duration-500 ease-in-out">
                {{title}}
            </a>

        </div>

        <div class="flex items-center select-none">
            <span class="hover:text-pink-500 font-bold dark-hover:text-pink-300
						cursor-pointer mr-3 transition duration-500 ease-in-out">
                <h3>{{username}}</h3>
            </span>
        </div>

    </nav>
    <h2 class="my-4 text-4xl font-serif dark:text-gray-400">
        {{title}}
    </h2>

    <div class="container mx-auto px-4 sm:px-8">
        {{> errors/message }}
        <div class="py-8">
            {{#if posts}}
            <div>
                <h6 class=" text-base font-mono leading-tight">posts: {{count}}</h6>
            </div>
            <div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
                <div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
                    <table class="min-w-full leading-normal">
                        <thead>
                            <tr>
                                <th
                                    class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Title
                                </th>
                                <th
                                    class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Image
                                </th>
                                <th
                                    class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Category
                                </th>
                                <th
                                    class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Status
                                </th>
                                <th
                                    class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Trending
                                </th>
                                <th
                                    class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Date
                                </th>
                                <th
                                    class="px-5 py-3 border-b-2 border-gray-600 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each posts}}
                            <tr>
                                <td class="px-2  py-2 border-b  border-r border-gray-300 bg-white text-sm">
                                    <div class="flex items-center">
                                        <div class="ml-3">
                                            <p class="text-gray-900 font-semibold whitespace-no-wrap">
                                                <a href="/posts/{{_id}}">{{title}}</a>
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-2  py-2 border-b  border-r border-gray-300 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">
                                        {{image.name}}
                                    </p>
                                </td>
                                <td class="px-2  py-2 border-b  border-r border-gray-300 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">
                                        {{category.name}}
                                    </p>
                                </td>
                                <td class="px-2  py-2 border-b  border-r border-gray-300 bg-white text-sm">
                                    <span
                                        class="relative inline-block px-3 py-1 font-semibold text-green-900 leading-tight">
                                        <span aria-hidden id="op"
                                            class="absolute inset-0  bg-orange-200 opacity-50 rounded-full"></span>
                                        <span class="relative">{{status}}</span>
                                    </span>
                                </td>
                                <td class="px-2  py-2 border-b  border-r border-gray-300 bg-white text-sm">
                                    <span
                                        class="relative inline-block px-3 py-1 font-semibold text-green-900 leading-tight">
                                        <span aria-hidden id="op"
                                            class="absolute inset-0  bg-green-200 opacity-50 rounded-full"></span>
                                        <span class="relative">{{trending}}</span>
                                    </span>
                                </td>
                                <td class="px-2  py-2 border-b  border-r border-gray-300 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">
                                        {{formatDate createdAt 'MM / DD / YYYY'}}
                                    </p>
                                </td>
                                <td class="px-2  py-2 border-b text-center border-r border-gray-300 bg-white text-sm">
                                    <div class="inline-flex mt-2 xs:mt-0">
                                        <a href="/admin/posts/edit/{{_id}}"
                                            class="text-sm bg-green-600 hover:bg-green-800 text-white font-semibold mr-2 py-2 px-4 rounded">
                                            <i class="fas fa-edit fa-small"></i>
                                        </a>
                                        <form action="/admin/posts/delete/{{_id}}" method="POST">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit"
                                                class="text-sm bg-red-600 hover:bg-gray-400 text-white font-semibold py-2 px-4 rounded">
                                                <i class="fas fa-trash-alt fa-small"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                                {{else}}
                                <p>you have no post yet create one</p>
                                {{/each}}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>